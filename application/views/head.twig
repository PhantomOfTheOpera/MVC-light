{% for file in css_common %}
    <link rel="stylesheet" href="{{ root ~ '/' ~ file[0] }}">
{% endfor %}
{% for file in css_specific %}
    <link rel="stylesheet" href="{{ root ~ '/' ~ file[0] }}">
{% endfor %}
{% for file in js_common %}
    <script {% if file.defer == true %}defer {% endif %}src="{{ root ~ '/' ~ file.url }}"></script>
{% endfor %}
